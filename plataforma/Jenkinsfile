pipeline {
    agent any
    
    stages {
        stage('Build Services') {
            parallel {
                stage('Account Service') {
                    steps {
                        dir('plataforma/api/account-service') {
                            echo 'Building account-service...'
                            bat 'mvn clean install'
                        }
                    }
                }
                stage('Auth Service') {
                    steps {
                        dir('plataforma/api/auth-service') {
                            echo 'Building auth-service...'
                            bat 'mvn clean install'
                        }
                    }
                }
                stage('Product Service') {
                    steps {
                        dir('plataforma/api/product-service') {
                            echo 'Building product-service...'
                            bat 'mvn clean install'
                        }
                    }
                }
                stage('Gateway Service') {
                    steps {
                        dir('plataforma/api/gateway-service') {
                            echo 'Building gateway-service...'
                            bat 'mvn clean install'
                        }
                    }
                }
                stage('Order Service') {
                    steps {
                        dir('plataforma/api/order-service') {
                            echo 'Building order-service...'
                            bat 'mvn clean install'
                        }
                    }
                }
            }
        }
    }
    
    post {
        success {
            echo 'Build conclu√≠do com sucesso!'
        }
        failure {
            echo 'Build falhou. Verifique os logs.'
        }
    }
}